{
    "plugins": [
        "react",
        "react-native"
    ],
    "extends": [
        "airbnb",
        "plugin:react-native/all"
    ],
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "react/jsx-indent": [
            "error",
            2
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/jsx-one-expression-per-line": 0,
        "react/jsx-indent-props": ["error", 4],
        "react/prop-types": 0,
        "class-methods-use-this": 0,
        "prefer-default-export": 0
    }
}